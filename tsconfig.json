{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "paths": {
      "@pixels-shope/ui/*": ["./src/*"],
      "@pixels-shope/ui/components": ["./src/components"],
      "@pixels-shope/ui/lib/utils": ["./src/lib/utils"],
      "@pixels-shope/ui/hooks": ["./src/hooks"],
      "@pixels-shope/ui/lib": ["./src/lib"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}
